		{{- product.variation_qty_increments -}}
		{{- product.field_package -}}
		{{- product.field_barcode -}}
		{{- product.field_catalog -}}
		{{- product.field_brand -}}
		{{- product.field_country -}}
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
